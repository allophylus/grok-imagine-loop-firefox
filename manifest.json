{
  "manifest_version": 2,
  "name": "Grok Imagine Loop (Firefox)",
  "version": "1.6.3",
  "description": "Automates Grok Imagine to create looped video sequences (Firefox version).",
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "downloads",
    "scripting",
    "tabs",
    "https://x.com/*",
    "https://twitter.com/*",
    "https://grok.com/*",
    "https://*.grok.com/*",
    "https://assets.grok.com/*",
    "https://imagine-public.x.ai/*",
    "https://assets.grokusercontent.com/*"
  ],
  "browser_action": {
    "default_title": "Open Grok Loop",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_panel": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*",
        "https://grok.com/*"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "background/background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "grok-imagine-loop@fen-pang",
      "strict_min_version": "109.0"
    }
  }
}
